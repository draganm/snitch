<bs.Modal id="deleteConfirmModal" bool:show="true" reportEvents="hide">
    <bs.Modal.Header>
      <bs.Modal.Title>Confirm deleting target</bs.Modal.Title>
    </bs.Modal.Header>
    <bs.Modal.Body>
      You are about to delete target "<strong id="targetName"/>". Are you sure?
    </bs.Modal.Body>
    <bs.Modal.Footer>
      <bs.Button id="deleteConfirmButton" bsStyle="danger" reportEvents="click:PD">Delete</bs.Button>
      <bs.Button id="deleteCancelButton" bsStyle="primary" reportEvents="click:PD">Cancel</bs.Button>
    </bs.Modal.Footer>
</bs.Modal>
